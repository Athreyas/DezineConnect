<h1>New job</h1>

<% form_for(@job) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :job_title %><br />
    <%= f.text_area :job_title %>
  </p>
  <p>
    <%= f.label :company_name %><br />
    <%= f.text_area :company_name %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_area :location %>
  </p>
  <p>
    <%= f.label :job_description %><br />
    <%= f.text_area :job_description %>
  </p>
  <p>
    <%= f.label :how_to_apply_email %><br />
    <%= f.text_area :how_to_apply_email %>
  </p>
  <p>
    <%= f.label :activate %><br />
    <%= f.check_box :activate %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', jobs_path %>
