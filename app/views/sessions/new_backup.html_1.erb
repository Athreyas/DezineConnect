<%= stylesheet_link_tag 'jobposting_login' %>
<%= javascript_include_tag 'show_password'  %>

<!-- 960 px wrapper -->
<div id="wrap">
  <div id="main"> <!-- main start -->
    <div id="main_inner"> <!-- main inner start -->
      <!--page title-->
      <div id="title">
        <% if session[:login_page_checkpoint] == 'job_posting' then %>
          <h1 class="hd_left_text">login</h1>
          <h1 class="hd_right_text">step 4/3</h1>
        <% elsif session[:login_page_checkpoint] == 'job_application' %>
          <h1 class="hd_left_text">login</h1>
          <h1 class="hd_right_text">step 2/2 </h1>
        <% end %>
      </div>
      
      If you are a first time user, please
      <span class="link">
        <a href="/signup">register</a>
      </span>
      to complete this job posting.

      <% form_tag session_path do -%>

        <fieldset>
          <label for="EmailId">email</label>
          <input type="text" name="EmailId" size="40"  maxlength="45" />
          <label for="Password">
            <span class="uploadlogin_forgot_link">
              password
              <a href="forgot">forgot password</a>
            </span>
          </label>
          <input type="password" name="Password" id="Password" size="40"  maxlength="45" />
          <form action="">
            <% if session[:login_page_checkpoint] == 'job_posting' then %>
              <label id="login_post_btn"><button type="submit"></button></label>
            <% elsif session[:login_page_checkpoint] == 'job_application' %>
              <label  class="register_apply_btn">
                <button type="submit"></button>
              </label>
            <% end %>
          </form>
        </fieldset>

      <% end -%>

    </div> <!-- main inner ends -->
  </div> <!-- main ends -->
</div><!-- 960 px wrapper ends -->

