<%= stylesheet_link_tag 'portfolio_search' %>

<%= javascript_include_tag 'endless_portfolios_page' %>
<%= javascript_include_tag 'favourites' %>
<%= javascript_include_tag 'prototype' %>

<div id="wrap"><!-- 960 px wrapper -->

  <div id="searchfield_n_createportfolio"><!--search box and create portfolio button-->
    <div id="search_box">
      <!--search for your next design job begins...-->
      <form method="post" action="/portfolios/search">
        <input id="search_textfield" name="search_textfield" type="text" size="45" maxlength="75" ></input>
        <div id="portfolio_search_button"></div>
      </form>
    </div><!-- search "ends" here -->
    <% if session[:loggedin_user].nil? or session[:loggedin_user].blank? then %>
      <form method="post" action="/users/new">
        <button id="search_create_portfolio_btn"></button>
      </form>
    <% end %>
  </div><!--search box and create portfolio button-->
  
  <div id="main"><!--main div-->
    <div id="portfolios">
           <%= render :partial => @portfolios %>
      </div>
    <div class="clear"></div>
    <!-- Changed More button code -->
   
     

<%if Portfolio.count >= 19 then %>
        <div id="more_button" align="right" onclick="morePortfolioResults()"></div>
	      <% end %>
	      </div><!--main div-->
  
</div><!-- 960 px wrapper ends -->
